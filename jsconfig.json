{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ESNext",
    "baseUrl": ".",
    "module": "esnext"
  },
  "include": ["src/**/*.js", "src/**/*.svelte"],
  "exclude": ["node_modules"]
} 